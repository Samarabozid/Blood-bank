<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Edit Profile"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_20ssp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_user_name"
                style="@style/donation_edittxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/donation_edittxt_corners"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/colorAccent"
                android:hint="Name"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edt_user_email"
                style="@style/donation_edittxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/donation_edittxt_corners"
                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/colorAccent"
                android:hint="Email"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_user_birth_day"
                style="@style/donation_edittxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/donation_edittxt_corners"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/colorAccent"
                android:hint="Birthday"
                android:padding="@dimen/_10sdp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_user_last_donation"
                style="@style/donation_edittxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/donation_edittxt_corners"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/colorAccent"
                android:hint="Last Donation"
                android:padding="@dimen/_10sdp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorAccent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/donation_edittxt_corners"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/ic_person_pin_circle_black_24dp"
                        android:tint="@color/colorAccent" />

                    <Spinner
                        android:id="@+id/spinner_user_blood_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/donation_edittxt_corners"
                        android:textColor="@android:color/black" />


                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/donation_edittxt_corners"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_home_black_24dp"
                    android:tint="@color/colorAccent" />

                <Spinner
                    android:id="@+id/spinner_user_governorate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/donation_edittxt_corners"
                    android:textColor="@android:color/black" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/donation_edittxt_corners"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_home_black_24dp"
                    android:tint="@color/colorAccent" />

                <Spinner
                    android:id="@+id/spinner_user_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/donation_edittxt_corners"
                    android:textColor="@android:color/black" />

            </LinearLayout>


            <EditText
                android:id="@+id/edt_user_phone"
                style="@style/donation_edittxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/donation_edittxt_corners"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/colorAccent"
                android:hint="Phone Number"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edt_password"
                style="@style/donation_edittxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/donation_edittxt_corners"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/colorAccent"
                android:hint="Password" />

            <EditText
                android:id="@+id/edt_confirm_password"
                style="@style/donation_edittxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/donation_edittxt_corners"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/colorAccent"
                android:hint="Confirm Password" />


            <Button
                android:id="@+id/btn_edit_profile"
                style="@style/btnStyle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_corners2"
                android:onClick="onViewClicked"
                android:text="Edit Profile" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>